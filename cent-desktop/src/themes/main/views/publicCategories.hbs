<h1>Categories</h1>

{{#if success}}
<div class="alert alert-success">{{ success }}</div>
{{/if}}
{{#if error}}
<div class="alert alert-danger">{{ error }}</div>
{{/if}}
{{#if message}}
<div class="alert alert-info">{{ message }}</div>
{{/if}}

<a href="/categories/add" class="btn btn-primary btn-sm">
  <i class="bi-plus"></i> Add category
</a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#if categories}}
    {{#each categories}}
    <tr>
      <td>{{ this.name }}</td>
      <td class="text-end">
        <a href="/categories/add/{{ this.id }}" class="btn btn-sm">
          <i class="bi-pencil-fill"></i>
        </a>
        <a
          href="/categories/delete/{{ this.id }}"
          class="btn btn-sm"
          onclick="return confirm('Are you sure?')"
        >
          <i class="bi-trash-fill"></i>
        </a>
      </td>
    </tr>
    {{/each}}
    {{else}}
    <tr>
      <td colspan="2">No categories</td>
    </tr>
    {{/if}}
  </tbody>
</table>
